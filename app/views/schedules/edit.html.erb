<div class='row'>
	<div class = 'span6 offset3'>

		<% if @schedule.errors.any? %>
			<p>There were <%= pluralize(@schedule.errors.count, "error") %></p>
			<ul>
			<% @schedule.errors.full_messages.each do |error| %>
				<li><%= error %></li>
			<% end %>
			</ul>
		<% end %>


		<h1>Schedule Meter Feed</h1>
		<%= form_for(@schedule) do |f| %>
			
			<%= render 'schedule_fields', f: f %>
			<p/><p/>
			<%= f.submit "Save", method: 'put'%>
	
		<% end %>
	</div>
</div>